{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"components/*": ["src/components/*"],
			"page/*": ["src/page/*"],
			"lib/*": ["src/lib/*"],
			"utils/*": ["src/utils/*"],
			"styles/*": ["src/styles/*"],
			"client/*": ["src/client/*"],
			"store/*": ["src/store/*"],
			"app-constants/*": ["src/constants/*"],
			"hooks/*": ["src/hooks/*"],
			"logics/*": ["src/logics/*"],
			"configs/*": ["src/configs/*"],
			"assets/*": ["src/assets/*"]
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }],
	"exclude": ["node_modules", "dist"]
}
